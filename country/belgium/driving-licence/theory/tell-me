function reactieafstand  {
  echo "opmerk -> rempedaal indrukt"
  echo "ongeveer 1 seconde"
  echo "afgeleid, vermoid, alcohol = longer"
}

function remafstand  {
  echo "rempedaal indrukt -> stilstaat"
  echo "hoe sneller, hoe meer"
  echo "wegdek, versleten banden of remmen => longer"
}

function stopafstand {
  echo "= reactieafstand + remafstand"
  echo "X km/u -> -+ (X-20)m"
}

